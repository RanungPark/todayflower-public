{
  "name": "todayflower-public",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "prelint": "pnpm run build",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "pnpm run lint --fix",
    "prettier": "prettier --check '**/*.{ts,tsx,js,jsx,json}'",
    "prettier:fix": "prettier --write '**/*.{ts,tsx,js,jsx,json}'",
    "publish": "changeset publish",
    "prepare": "husky install"
  },
  "description": "",
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@todayflower-public/eslint-config": "workspace:^",
    "@todayflower-public/prettier-config": "workspace:^",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  }
}
